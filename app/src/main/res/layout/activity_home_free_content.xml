<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFreeContent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content"
            android:text="제목:"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/content_homeFree_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목입니다"
            android:textSize="15dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content"
            android:text="작성자:"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/content_homeFree_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content_content"
            android:text="작성자입니다"
            android:textSize="15dp"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClickHandler"
            android:text="삭제하기"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content"
            android:text="작성일시:"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/content_homeFree_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content_content"
            android:text="작성일입니다"
            android:textSize="15dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content"
            android:text="내용:"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/content_homeFree_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/content_content"
            android:text="내용입니다"
            android:textSize="15dp"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/content_homeFree_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@raw/heart"></ImageView>

            <TextView
                android:id="@+id/content_homeFree_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="0dp"
                android:gravity="bottom"
                android:text="갯수"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회수"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/content_homeFree_visitnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/content_content"
                android:text="조회수"
                android:textSize="15dp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/content_homeFree_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갯수"
            android:textSize="20dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_homeFree_reply"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="댓글을 입력하세요"
                android:inputType="text|textMultiLine"
                android:minLines="1"
                android:textSize="20dp"></EditText>

            <Button
                android:id="@+id/btn_homeFree_reply"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="등록"></Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ListView
            android:id="@+id/list_homeFree_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>